<%- include('../layouts/header.ejs') %>
<div class="container p-4">
    <div class="h3">
        List Classes Page
    </div>
    <a href="/create-class" class="btn btn-outline-primary rounded-0">Create</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>No.</th>
                <th>ID</th>
                <th>Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% classes.forEach((items, index) => { %>
                <tr>
                    <td scope="row"><%= index + 1 %> </td>
                    <td><%= items.id %></td>
                    <td><%= items.name %></td>
                    <td><%= items.status == 1 ? "Show" : "Hide" %></td>
                    <td style="width: 20%;">
                        <a href="/update-class/<%= items.id %>" class="btn btn-outline-success rounded-0">Update</a>
                        <a href="/delete-class/<%= items.id %>" class="btn btn-outline-danger rounded-0">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div> 
<%- include('../layouts/footer.ejs') %> 